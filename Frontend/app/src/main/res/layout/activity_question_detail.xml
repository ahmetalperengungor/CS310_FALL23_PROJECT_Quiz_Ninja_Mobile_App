<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8299AA"
    tools:context=".question_detail_activity">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="62dp"
        android:layout_height="48dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:background="#8299AA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_revert" />

    <ImageView
        android:id="@+id/question_detail_image"
        android:layout_width="428dp"
        android:layout_height="280dp"
        android:layout_marginTop="156dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/solution_detail_image"
        android:layout_width="428dp"
        android:layout_height="280dp"
        android:layout_marginTop="30dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_detail_image"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="-8dp"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/see_comment_button"
        android:layout_width="74dp"
        android:layout_height="76dp"
        android:backgroundTint="#8299AA"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/stat_notify_chat" />

    <TextView
        android:id="@+id/course_detail_text"
        android:layout_width="331dp"
        android:layout_height="46dp"
        android:layout_marginTop="44dp"
        android:text="Course: "
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/source_detail_text"
        android:layout_width="335dp"
        android:layout_height="45dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="8dp"
        android:text="Source:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/course_detail_text" />

    <Button
        android:id="@+id/solution_display_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginEnd="128dp"
        android:text="See Solution"
        app:layout_constraintBottom_toTopOf="@+id/solution_detail_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_detail_image" />

</androidx.constraintlayout.widget.ConstraintLayout>